{
  "name": "Conversation",
  "type": "object",
  "properties": {
    "contact_name": {
      "type": "string",
      "description": "Name of the contact"
    },
    "contact_avatar": {
      "type": "string",
      "description": "Avatar URL or initials"
    },
    "last_message": {
      "type": "string",
      "description": "Preview of the last message"
    },
    "last_message_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the last message"
    },
    "unread_count": {
      "type": "number",
      "default": 0,
      "description": "Number of unread messages"
    },
    "is_online": {
      "type": "boolean",
      "default": false,
      "description": "Whether the contact is online"
    }
  },
  "required": [
    "contact_name"
  ]
}